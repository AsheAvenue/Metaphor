<div class="content">
    <% if flash[:alert] %>
        <div class="alert">
            <%= flash[:alert] %>
        </div>
    <% end %>
    
    <div class="header">
        Metaphor
    </div>
    
    <div class="form">
        <%= form_for @user do |f| %>
          <div>
            <%= f.text_field :username, :placeholder => "Username" %>
          </div>
          <div>
            <%= f.text_field :email, :placeholder => "Email" %>
          </div>
          <div>
            <%= f.password_field :password, :placeholder => "Password" %>
          </div>
          <div>
            <%= f.password_field :password_confirmation, :placeholder => "Confirm Password"  %>
          </div>
          <div>
              <%= f.submit "Sign up" %>
          </div>
        <% end %>
    </div>
</div>