<div id="stage">
    <div id="gallery_editor">
        <div id="gallery" data-id="<%= @gallery.id %>" class="gallery-stage clearfix" data-update-url="<%= gallery_sort_url(@gallery) %>">
    
            <% @widgets.each_with_index do |widget, index| %>
                <% 
                    if @widget 
                        widget = @widget
                    end
    
                    @image = widget.content
                %>
                <%= render :partial => widget.content_type.downcase, :locals => {:widget => widget, :position => index} %>
            <% end %>
    
        </div>
    </div>
</div>

<div id="gallery-drop-bar">
    <div id="gallery-drop">
        <div class="title">
            Drag Images Here
        </div>
    </div>  
</div>

<div id="bottom-bar">
    <div class="buttons pull-right">
        <a id="gallery-back" href="<%= article_editor_path(@article) %>" class="button">Back to Article</a>
    </div>  
</div>

<%= javascript_include_tag "metaphor/metaphor/paneslide/jquery.paneslide" %>