<div id="list">
    
    <div class="header">
        <%= Settings.series.name.pluralize %>
        <div class="header-link pull-right">
            <%= link_to "New #{Settings.series.name} Â»", new_series_url %>
        </div>
    </div>
    
    <div id="fields" class="fields clearfix">
        <div class="quarter">
            Name
        </div>
        <div class="quarter">
            Slug
        </div>
        <div class="half">
            Image
        </div>
    </div>

    <ul id="items" class="items">
        <% @serieses.each do |series| %>
            <li class="item mix not_scheduled clearfix">
                <div class="quarter">
                    <%= link_to series.name, edit_series_path(series) %>
                </div>
                <div class="quarter">
                    <%= link_to series.slug, edit_series_path(series) %>
                </div>
                <div class="half">
                    <% if !series.image.blank? %>
                        <%= image_tag series.image.url(:thumb) %>
                    <% else %>
                        &nbsp;
                    <% end %>
                </div>
            </li>
        <% end %>
    </ul>
    
</div>