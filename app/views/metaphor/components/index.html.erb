<div id="list">
    
    <div class="header">
        <%= Settings.components.plural %>
        <div class="header-link pull-right">
            <%= link_to "New #{Settings.components.singular} Â»", new_component_url %>
        </div>
    </div>
    
    <div id="fields" class="fields clearfix">
        <div class="half">
            Name
        </div>
        <div class="quarter">
            Slug
        </div>
    </div>

    <ul id="items" class="items">
        <% @components.each do |component| %>
            <li class="item mix not_scheduled clearfix">
                <div class="half">
                    <%= link_to component.name, edit_component_path(component) %>
                </div>
                <div class="quarter">
                    <%= link_to component.slug, edit_component_path(component) %>
                </div>
            </li>
        <% end %>
    </ul>
    
</div>