<div id="list">
    
    <div class="header">
        <%= Settings.flags.name.pluralize %>
        <div class="header-link pull-right">
            <%= link_to "New #{Settings.flags.name} Â»", new_flag_url %>
        </div>
    </div>
    
    <div id="fields" class="fields clearfix">
        <div class="half">
            Name
        </div>
        <div class="quarter">
            Slug
        </div>
    </div>

    <ul id="items" class="items">
        <% @flags.each do |flag| %>
            <li class="item mix not_scheduled clearfix">
                <div class="half">
                    <%= link_to flag.name, edit_flag_path(flag) %>
                </div>
                <div class="quarter">
                    <%= link_to flag.slug, edit_flag_path(flag) %>
                </div>
            </li>
        <% end %>
    </ul>
    
</div>