<div class="pickercontent">
    <header>
    	<div class="top clearfix">
            <div class="navigation-wrapper clearfix">
                Videos
            </div>
    	</div>
    </header>


    <div class="tabs clearfix">
        <div class="tab" data-content="recent">
            Recent Videos
        </div>
        <div class="tab" data-content="add">
            Add a Video
        </div>
    </div>
    <div class="content recent">    
        <% @videos.each do |video| %>
            <div class="item clearfix">
                <div class="single">
                    <iframe width="475" height="357" src="//www.youtube.com/embed/<%= video.code %>" frameborder="0" allowfullscreen></iframe>
                    <%= link_to video.name, "", 'data-picker-item' => video.id %>
                </div>
            </div>
        <% end %>
    </div>
    <div class="content add">
        <div>
            <%= text_field_tag :name, "", :placeholder => "Name", :id => 'video-name', :class => "picker-new-name", :autocomplete=>"off" %>
        </div>
        <div>
            <%= text_field_tag :slug, "", :placeholder => "Slug", :id => 'video-slug', :class => "picker-new-slug", :autocomplete=>"off" %>
        </div>
        <div>
            <%= text_field_tag :code, "", :placeholder => "Youtube ID", :id => 'video-code', :autocomplete=>"off" %>
        </div>
        <div class="buttons">
            <a href="" class="button" id="picker-add-video">Add Video</a>
        </div>
    </div>

</div>

<div id="picker-bottom-bar">
    <div class="buttons pull-right">
        <a id="picker-cancel" href="#" class="button">Close Video Selector</a>
    </div>  
</div>