<div id="list">
    
    <div class="header">
        <%= Settings.related_parties.plural %>
        <div class="header-link pull-right">
            <%= link_to "New #{Settings.related_parties.singular} Â»", new_related_party_url %>
        </div>
    </div>
    
    <div id="fields" class="fields clearfix">
        <div class="half">
            Name
        </div>
        <div class="quarter">
            Slug
        </div>
    </div>

    <ul id="items" class="items">
        <% @related_parties.each do |related_party| %>
            <li class="item mix not_scheduled clearfix">
                <div class="half">
                    <%= link_to related_party.name, edit_related_party_path(related_party) %>
                </div>
                <div class="quarter">
                    <%= link_to related_party.slug, edit_related_party_path(related_party) %>
                </div>
            </li>
        <% end %>
    </ul>
    
</div>