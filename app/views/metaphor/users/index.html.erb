<div id="list">
    
    <div class="header">
        Users
        <div class="header-link pull-right">
            <%= link_to "New User Â»", new_user_url %>
        </div>
    </div>
    
    <div id="fields" class="fields clearfix">
        <div class="quarter">
            Display Name
        </div>
        <div class="quarter">
            Username
        </div>        
        <div class="quarter">
            Email
        </div>       
        <div class="quarter">
            Role
        </div>
    </div>

    <ul id="items" class="items">
        <% @users.each do |user| %>
            <li class="item mix not_scheduled clearfix" data-status="not_scheduled" data-created="<%= user.created_at.to_time.to_i %>">
                <div class="quarter">
                    <%= link_to user.display_name, edit_user_path(user) %>
                </div>
                <div class="quarter">
                    <%= link_to user.username, edit_user_path(user) %>
                </div>                
                <div class="quarter">
                    <%= link_to user.email, edit_user_path(user) %>
                </div>                
                <div class="quarter">
                    <%= link_to user.role.name, edit_role_path(user.role.id) %>
                </div>
            </li>
        <% end %>
        <div class="fail_element">
            :( Sorry, no users meet the selected criteria.
        </div>
    </ul>
    
</div>