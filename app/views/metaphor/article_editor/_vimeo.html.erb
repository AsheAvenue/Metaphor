<div id="select_vimeo" data-path="<%= article_editor_select_vimeo_path(@article) %>"></div>

<div class="vimeo-container" data-picker="vimeo" data-picker-callback="article_editor#select_vimeo" data-picker-position="<%= position %>">
    <% 
        if !@widgets.blank? && @widgets["#{position}"]&& @widgets["#{position}"].content_type == "Vimeo"
            @vimeo = @widgets["#{position}"].content
        end
    %>
    <% if @vimeo %>
        <%= render :partial => 'vimeo-embed' %>
    <% else %>
        <div class="select-vimeo">
            Select a Vimeo video
        </div>
    <% end %>
</div>