<div id="list">
    
    <div class="header">
        Roles
        <div class="header-link pull-right">
            <%= link_to "New Role Â»", new_role_url %>
        </div>
    </div>
    
    <div id="fields" class="fields clearfix">
        <div class="quarter">
            Name
        </div>
        <div class="halt">
            Users
        </div>
    </div>

    <ul id="items" class="items">
        <% @roles.each do |role| %>
            <li class="item mix not_scheduled clearfix" data-status="not_scheduled" data-created="<%= role.created_at.to_time.to_i %>">
                <div class="quarter">
                    <%= link_to role.name, edit_role_path(role) %>
                </div>
                <div class="half">
                    <%= role.users.map { |user| user.display_name }.join(", ") %>
                </div>
            </li>
        <% end %>
        <div class="fail_element">
            :( Sorry, no roles meet the selected criteria.
        </div>
    </ul>
    
</div>