<%= form_for @role, :html => {:autocomplete=>"off"} do |f| %>
    <div id="content">
        <div class="header">
            <% if action == "create" %>
                New
            <% elsif action == "update" %>
                Edit
            <% end %>
            Role
        </div>
        <% if flash[:alert] %>
            <div class="alert">
                <%= flash[:alert] %>
            </div>
        <% end %>
        <div class="form-section clearfix">
            <div class="form-section-left">
                Role Name
            </div>
            <div class="form-section-right">
                <div class="form-line">
                    <%= f.text_field :name, :placeholder => "Name", :id => 'role-name', :autocomplete=>"off", :class => 'form-text-field' %>
                </div>
            </div>
        </div>
        <% if !@role.users.empty? %>
          <div class="form-section clearfix">
              <div class="form-section-left">
                  Users
              </div>
              <div class="form-section-right">
                  <% @role.users.each do |user| %>
                      <div class="form-line">
                          <%= link_to user.display_name, edit_user_path(user) %>
                      </div>
                  <% end %>
              </div>
          </div>
        <% end %>
        <div class="form-section clearfix">
            <div class="form-section-left"></div>
            <div class="form-section-right">
                <div class="form-line">
                  <% if action == 'update' %>
                      <%= f.submit "Save Role", :class => "button" %>
                  <% else %>
                      <%= f.submit "Create Role", :class => "button" %>
                  <% end %>
                </div>
            </div>
        </div>
    </div>
    
<% end %>