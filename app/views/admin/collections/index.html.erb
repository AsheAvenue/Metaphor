<div id="list">
    
    <div class="header">
        <%= Settings.collections.plural %>
        <div class="header-link pull-right">
            <%= link_to "New #{Settings.collections.singular} Â»", new_admin_collection_url %>
        </div>
    </div>
    
    <div id="fields" class="fields clearfix">
        <div class="half">
            Name
        </div>
        <div class="quarter">
            Slug
        </div>
    </div>

    <ul id="items" class="items">
        <% @collections.each do |collection| %>
            <li class="item mix not_scheduled clearfix">
                <div class="half">
                    <%= link_to collection.name, edit_admin_collection_path(collection) %>
                </div>
                <div class="quarter">
                    <%= link_to collection.slug, edit_admin_collection_path(collection) %>
                </div>
            </li>
        <% end %>
    </ul>
    
</div>