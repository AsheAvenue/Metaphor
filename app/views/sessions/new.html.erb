<div class="content">
    <% if flash[:alert] %>
        <div class="alert">
            <%= flash[:alert] %>
        </div>
    <% end %>
    
    <div class="header">
        <%= Settings.site.name %>
    </div>
    
    <div class="form">
        <%= form_tag sessions_path do %>
          <div>
            <%= text_field_tag :username, params[:username], :placeholder => "Username" %>
          </div>
          <div>
            <%= password_field_tag :password, :placeholder => "Password" %>
          </div>
          <div>
            <%= check_box_tag :remember_me, 1, params[:remember_me] %> Remember me
          </div>
          <div class="actions"><%= submit_tag "Sign in" %></div>
        <% end %>
    </div>
</div>