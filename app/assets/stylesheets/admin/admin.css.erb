/******* PREVIEW ********/

#bottom-bar {
    position: fixed;
    bottom: 0px;
    width: 100%;
    padding: 10px 10px 10px 15px;
    background: #7f8c8d;
    border-top: 1px solid rgba(0,0,0,0.5);
    box-shadow: -2px 0 0 0 rgba(0,0,0,0.2);
    z-index: 30;
    -webkit-transition: left .5s ease-in-out,background .4s ease-in-out;
    transition: left .5s ease-in-out,background .4s ease-in-out;
}

#bottom-bar .title {
    color: white;
    font-size: 30px;
    line-height: 30px;
    font-weight: 100;
}

#bottom-bar .screen-sizes {
    color: white;
    font-size: 24px;
    line-height: 24px;
    font-weight: 100;
    margin-left: 15px;
    padding-left: 10px;
    border-left: 1px solid #bdc3c7;
}

#bottom-bar .screen-sizes span {
    margin: 3px 10px 0px;
    cursor: pointer;
}

#bottom-bar .screen-sizes span.active {
    color: #f1c40f;
}

#bottom-bar .done-previewing {
  margin-right: 25px;
  margin-top: 3px;
}

#preview-content {
  height: auto;
  width: 100%;
  top: 0px;
  left: 0px;
  bottom: 0px;
  position: fixed;
  margin: 51px 0px 53px;
  z-index: 40;
}

#preview-content .pane {
  width: 49%;
  margin-left: .5%;
  margin-right: .5%;
  height: 100%;
}

#preview-content .pane.left {
  float: left;
}

#preview-content .pane.right {
  float: right;
}

#preview-content .pane .header {
    color: white;
    padding: 7px;
    font-size: 24px;
    line-height: 24px;
    font-weight: 100;
    border-bottom: 1px solid rgba(0,0,0,0.5);
}

#preview-list-iframe,
#preview-article-iframe {
  width: 100%;
  height: 94%;
  margin: 0 auto;
  display: block;
}
