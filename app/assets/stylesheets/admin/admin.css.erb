/* ------ ARTICLE ------ */

#left-bar {
    position: fixed;
    width: 250px;
    background: #333;
    border-right: 1px solid rgba(0,0,0,0.5);
    height: 100%;
    top: 50px;
    left: 0px;
    box-shadow: 2px 0 3px 0 rgba(0,0,0,0.2);
    z-index: 29;
    -webkit-transition: left .5s ease-in-out,background .4s ease-in-out;
    transition: left .5s ease-in-out,background .4s ease-in-out;
}

#left-bar .header {
    color: white;
    padding: 10px;
    font-size: 42px;
    line-height: 42px;
    font-weight: 100;
    border-bottom: 1px solid rgba(0,0,0,0.5);
}

#left-bar .new {
    background-color: #2ecc71;
}

#left-bar .new a {
    color: white;
    font-size: 18px;
    line-height: 18px;
    font-weight: 100;
}

#left-bar .item,
#left-bar .new {
    padding: 10px;
    border-bottom: 1px solid rgba(0,0,0,0.5);
}

#left-bar .item a {
    color: white;
    text-decoration: none;
    font-weight: 100;
}

#content {
    height: 100%;
    margin-left: 251px;
    padding: 60px 10px 10px;
}

#content.has-right-bar {
    margin-right: 350px;
}

#content .header {
    color: white;
    padding: 10px;
    font-size: 36px;
    line-height: 36px;
    font-weight: 100;
    margin-bottom: 20px;
    border-bottom: 1px solid rgba(0,0,0,0.5);
}

#right-bar {
    position: fixed;
    width: 350px;
    background: #333;
    border-left: 1px solid rgba(0,0,0,0.5);
    height: 100%;
    top: 50px;
    right: 0px;
    box-shadow: 2px 0 3px 0 rgba(0,0,0,0.2);
    z-index: 29;
    -webkit-transition: left .5s ease-in-out,background .4s ease-in-out;
    transition: left .5s ease-in-out,background .4s ease-in-out;
}

#right-bar .header {
    color: white;
    padding: 10px;
    font-size: 24px;
    line-height: 24px;
    font-weight: 100;
    border-bottom: 1px solid rgba(0,0,0,0.5);
}

#right-bar .item {
    border-bottom: 1px solid rgba(0,0,0,0.5);
    color: white;
    padding: 10px;
}

#right-bar .item .item-title {
    font-weight: 100;
    font-size: 18px;
    line-height: 24px;
    font-style: italic;
}

.right-bar-link,
.right-bar-link:hover {
    color: #bdc3c7;
    text-decoration: none;
    font-size: 11px;
}

#article-slug-check,
#article-slug-container,
#article-author-container,
#article-author-other,
#article-author-other-name,
#article-author-other-cancel,
#article-category-container,
