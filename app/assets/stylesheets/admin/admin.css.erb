/* ------ DEFAULTS ------ */

html, body, div, span, applet, object, iframe,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed, 
figure, figcaption, footer, header, hgroup, 
menu, nav, output, ruby, section, summary,
time, mark, audio, video, input, textarea {
	margin: 0;
	padding: 0;
	border: 0;
	vertical-align: baseline;
  font-family: 'Source Sans Pro', sans-serif;
}

article, aside, details, figcaption, figure, 
footer, header, hgroup, menu, nav, section{
	display: block;
}

table{
	border-spacing: 0;
	border-collapse: collapse;
}

a {
	text-decoration: none;
}

/* ------ GLOBAL ------ */

html, body {
	height: 100%;
    overflow: auto;
}

.clearfix{
	clear: both;
	overflow: hidden;
}

.button,
.button:hover {
  padding: 5px 15px !important;
  min-width: 164px;
  font-size: 18px;
  line-height: 18px;
  font-weight: 100;  
  color: white;
  vertical-align: middle;
  background-color: #bdc3c7;
  text-decoration: none !important;
  text-shadow: 0 1px 0 rgba(0,0,0,0.15);
  -webkit-box-shadow: 0 2px 0 0 #95a5a6;
  -moz-box-shadow: 0 2px 0 0 #95a5a6;
  box-shadow: 0 2px 0 0 #95a5a6;
  -webkit-border-radius: 3px;
  -moz-border-radius: 3px;
  border-radius: 3px;
  border: none;
  clear: both;
  webkit-font-smoothing: antialiased;
  -webkit-transition: background-color 0.15s ease-in-out;
  -moz-transition: background-color 0.15s ease-in-out;
  -o-transition: background-color 0.15s ease-in-out;
  transition: background-color 0.15s ease-in-out; 
}

.button.green {
  background-color: #2ecc71;
  -webkit-box-shadow: 0 2px 0 0 #27ae60;
  -moz-box-shadow: 0 2px 0 0 #27ae60;
  box-shadow: 0 2px 0 0 #27ae60;
}

/* ------ HEADER ------ */

header .top {
    position: fixed;
    width: 100%;
    height: 50px;
    background: #e74c3c;
    color: #ecf0f1;
    font-size: 30px;
    line-height: 30px;
    font-weight: 100;
    font-style: italic;
}

header .navigation-wrapper {
    padding: 10px;
}

header .navigation {
    padding: 5px 0px 5px 10px;
    height: 14px;
    background: #c0392b;
    color: #ecf0f1;
    font-size: 14px;
    line-height: 14px;
    font-weight: 100;
    float: right;
    margin: 5px;
}

header .navigation ul {
    margin: 0;
}

header .navigation li {
    display: inline;
    list-style-type: none;
    margin-right: 10px;
    line-height: 0;
}

header .navigation li a {
    color: white;
    text-decoration: none;
}

/* ------ CONTENT ------ */

#stage {
    height: 100%;
}

.form-section-left {
    float: left;
    padding: 15px 0px 0px 10px;
    color: white;
    font-size: 30px;
    font-weight: 100;
    font-style: italic;
    line-height: 38px;
    width: 20%;
}

.form-section-right {
    float: left;
    width: 75%;
}

.form-line {
    padding: 10px;
    color: white;
    font-size: 24px;
    font-weight: 100;
    line-height: 24px;
    width: 100%;
}

.form-line a,
.form-line a:hover {
    color: white;
}

.form {
    padding-top: 20px;
}

#article-title,
#article-summary,
#article-default-image,
#article-body {
    color: white;
    font-weight: 100;
    height: 30px;
    width: 500px;
    border: 0px;
    background: none;
    border-bottom: 1px solid white;
    -webkit-box-shadow: none;
    -moz-box-shadow: none;
    box-shadow: none;
    -webkit-border-radios: 0px;
    -moz-border-radius: 0px;
    border-radius: 0px;
    margin-bottom: 0px;
    resize: none;
    width: 100%;
}

#article-title {
    font-size: 34px;
    line-height: 36px;
}

#article-summary {
    font-size: 24px;
    line-height: 26px;
}

#article-body {
    font-size: 16px;
    line-height: 18px;
    margin-bottom: 60px;
}

#article-default-image {
    font-size: 16px;
    line-height: 0px;
    height: auto;
    border: 0px;
    margin-top: 7px;
}

#article-default-image .left,
#article-default-image .right {
    float: left;
}

#article-default-image-remove-checkbox {
    display: none;
}

/* popped up when viewing default image sizes */
.modal-body {
    background-color: #333;
    width: auto;
}

/* ------ LIST ------- */

#list {
    background: #333;
    padding: 70px 30px 20px;
}

#list .header,
#list .small-header {
    color: white;
    padding: 10px;
    font-size: 42px;
    line-height: 42px;
    font-weight: 100;
}

#list .small-header {
    font-size: 32px;
    line-height: 32px;
}

#list .header .header-link a {
    color: white;
    background-color: #2ecc71;
    font-size: 32px;
    line-height: 32px;
    font-weight: 100;
    padding: 5px 10px;
}

#list hr {
    border-top: 0px;
    border-bottom: 1px solid #666;
}

#list .criteria {
    margin: 10px 10px 0px;
    padding: 0px 5px 5px 0px;
    color: white;
    font-size: 21px;
    font-weight: 100;
    font-style: italic;
}

#list .criteria ul {
    display: inline;
    list-style-type: none;
    margin: 0px 3px; 
}

#list .criteria li {
    display: inline;
    padding: 0px 3px;
    text-decoration: underline !important;
    font-style: normal;
    cursor: pointer;
}

#list .criteria li.active {
    background-color: #ecf0f1;
    color: black;
}

#list .fields {
    margin: 20px 10px 10px;
    padding: 0px 5px 3px 5px;
    border-bottom: 1px solid #bdc3c7;
}

#list .items {
    margin: 10px 0px 0px 0px;
}


#list .item {
    margin: 10px 10px 0px;
    padding: 0px 5px 0px 5px;
}

#list .fields,
#list .item,
#list .item a,
#list .item a:hover {
    color: white;
    font-size: 21px;
    line-height: 25px;
    font-weight: 100;
}

#list .fields {
    font-style: italic;
}

#list .item.mix {
    display: none;
    opacity: 0;
}

#list .half {
    float: left;
    width: 50%;
}

#list .quarter {
    float: left;
    width: 25%;
}

#list .twofifths {
    float: left;
    width: 40%;
}

#list .onefifth {
    float: left;
    width: 20%;
}


.fail_element {
    opacity: 0;
    margin: 10px 10px 0px;
    padding: 0px 5px 5px 0px;
    color: white;
    font-size: 21px;
    font-weight: 100;
    font-style: italic;
}

.fail .fail_element {
    opacity: 1;
}

