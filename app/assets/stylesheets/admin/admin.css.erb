/* ------ DEFAULTS ------ */

html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed, 
figure, figcaption, footer, header, hgroup, 
menu, nav, output, ruby, section, summary,
time, mark, audio, video, input, textarea {
	margin: 0;
	padding: 0;
	border: 0;
	vertical-align: baseline;
    font-family: 'Source Sans Pro', sans-serif !important;
}

article, aside, details, figcaption, figure, 
footer, header, hgroup, menu, nav, section{
	display: block;
}

table{
	border-spacing: 0;
	border-collapse: collapse;
}

h1,h2,h3,h4,h5,h6{
	font-weight: normal;
}

a{
	text-decoration: none;
}

.navigation li{
	list-style-type: none;
	display: inline-block;
}

/* ------ GLOBAL ------ */

html, body {
	height: 100%;
}

.wrapper{
	margin: 0 auto;
	max-width: 1200px;
	padding: 0 15px 130px;
}

.clear{
	clear: both;
}

.clearfix{
	clear: both;
	overflow: hidden;
}

.spacer{
	clear: both;
	height: 40px;
}

.ib{
	display: inline-block;
}

.ab{
	position: absolute;
}

.caps{
	text-transform: uppercase;
}

.white {
    background-color: white;
}

/* ------ HEADER ------ */

header .top {
    padding: 10px;
    height: 30px;
    background: #e74c3c;
    color: #ecf0f1;
    font-size: 30px;
    line-height: 30px;
    font-weight: 100;
    font-style: italic;
}

header .navigation {
    padding: 5px 0px 5px 10px;
    height: 14px;
    background: #c0392b;
    color: #ecf0f1;
    font-size: 14px;
    line-height: 14px;
    font-weight: 100;
    float: right;
    margin-left: 10px;
}

header .navigation ul {
    margin: 0;
}

header .navigation li {
    display: inline;
    list-style-type: none;
    margin-right: 10px;
    line-height: 0;
}

header .navigation li a {
    color: white;
    text-decoration: none;
}

/* ------ CONTENT ------ */

#stage {
    height: 100%;
}

.content {
    padding: 10px;
}

.content .page-title {
    font-size: 32px;
    line-height: 42px;
    font-weight: 800;
    border-bottom: 1px solid #bdc3c7;
}

#list .list-item {
    min-width: 150px;
    min-height: 30px;
    background: #fff;
    border: 1px solid #eaeaea;
    border-left: 1px solid #dadada;
    border-radius: 4px;
    border-top: 1px solid #dadada;
    padding: 10px;
    font-size: 24px;
    font-weight: 200;
    font-style: italic;
    margin-bottom: 5px;
}

.form {
    padding-top: 20px;
}

#article-title,
#article-body {
    width: 100%;
    border: 0px;
    -webkit-box-shadow: inset 0 0px 0px rgba(0,0,0,0.075);
    -moz-box-shadow: inset 0 1px 0px rgba(0,0,0,0.075);
    box-shadow: inset 0 0px 0px rgba(0,0,0,0.075);
    margin-bottom: 0px;
}

#article-title {
    font-size: 46px;
    line-height: 52px;
    height: 50px;
}

#article-body {
    font-size: 16px;
}

/* ------ LIST ------- */

#list {
    background: #333;
    padding: 20px 30px;
}

#list .header {
    color: white;
    padding: 10px;
    font-size: 42px;
    line-height: 42px;
    font-weight: 100;
}

#list .header .header-link a {
    color: white;
    background-color: #2ecc71;
    font-size: 32px;
    line-height: 32px;
    font-weight: 100;
    padding: 5px 10px;
}

#list .criteria {
    margin: 10px 10px 0px;
    padding: 0px 5px 5px 0px;
    color: white;
    font-size: 21px;
    font-weight: 100;
    font-style: italic;
}

#list .criteria ul {
    display: inline;
    list-style-type: none;
    margin: 0px 3px; 
}

#list .criteria li {
    display: inline;
    padding: 0px 3px;
    text-decoration: underline !important;
    font-style: normal;
    cursor: pointer;
}

#list .criteria li.active {
    background-color: #ecf0f1;
    color: black;
}

#list .fields {
    margin: 20px 10px 10px;
    padding: 0px 5px 3px 5px;
    border-bottom: 1px solid #bdc3c7;
}

#list .items {
    margin: 10px 0px 0px 0px;
}


#list .item {
    margin: 10px 10px 0px;
    padding: 0px 5px 0px 5px;
}

#list .fields,
#list .item,
#list .item a,
#list .item a:hover {
    color: white;
    font-size: 21px;
    line-height: 25px;
    font-weight: 100;
    font-style: italic;
}

#list .item.mix {
    display: none;
    opacity: 0;
}

#list .half {
    float: left;
    width: 50%;
}

#list .quarter {
    float: left;
    width: 25%;
}

#list .twofifths {
    float: left;
    width: 40%;
}

#list .onefifth {
    float: left;
    width: 20%;
}


.fail_element {
    opacity: 0;
    margin: 10px 10px 0px;
    padding: 0px 5px 5px 0px;
    color: white;
    font-size: 21px;
    font-weight: 100;
    font-style: italic;
}

.fail .fail_element {
    opacity: 1;
}

/* ------ USER, ROLE, CATEGORY, and SERIES forms------ */

#user-username,
#user-email,
#user-display-name,
#user-password,
#user-password-confirmation,
#role-name,
#role-key,
#category-name,
#category-slug,
#series-name,
#series-slug {
    color: white;
    font-size: 24px;
    font-weight: 100;
    line-height: 30px;
    height: 30px;
    width: 300px;
    border: 0px;
    background: none;
    border-bottom: 1px solid white;
    -webkit-box-shadow: none;
    -moz-box-shadow: none;
    box-shadow: none;
    -webkit-border-radios: 0px;
    -moz-border-radius: 0px;
    border-radius: 0px;
    margin-bottom: 0px;
}

#user_role_ids {
    margin-top: 17px;
    margin-left: 10px;
}

#user-display-name-container {
    display: none;
}

.form-section {
    margin-bottom: 30px;
}

.form-section-left {
    float: left;
    padding: 15px 0px 0px 10px;
    color: white;
    font-size: 30px;
    font-weight: 100;
    font-style: italic;
    line-height: 32px;
    width: 200px;
}

.form-section-right {
    float: left;
}

.form-line {
    padding: 10px;
    color: white;
    font-size: 24px;
    font-weight: 100;
    line-height: 24px;
}

.form-line a,
.form-line a:hover {
    color: white;
}


/* ------ ARTICLE ------ */

#left-bar {
    position: absolute;
    width: 250px;
    background: #333;
    border-right: 1px solid rgba(0,0,0,0.5);
    height: 100%;
    top: 50px;
    left: 0px;
    box-shadow: 2px 0 3px 0 rgba(0,0,0,0.2);
    z-index: 29;
    -webkit-transition: left .5s ease-in-out,background .4s ease-in-out;
    transition: left .5s ease-in-out,background .4s ease-in-out;
}

#left-bar .header {
    color: white;
    padding: 10px;
    font-size: 42px;
    line-height: 42px;
    font-weight: 100;
    border-bottom: 1px solid rgba(0,0,0,0.5);
}

#left-bar .new {
    background-color: #2ecc71;
}

#left-bar .new a {
    color: white;
    font-size: 18px;
    line-height: 18px;
    font-weight: 100;
}

#left-bar .item,
#left-bar .new {
    padding: 10px;
    border-bottom: 1px solid rgba(0,0,0,0.5);
}

#left-bar .item a {
    color: white;
    text-decoration: none;
    font-weight: 100;
}

#content {
    height: 100%;
    margin-left: 251px;
    padding: 10px;
}

#content.has-right-bar {
    margin-right: 350px;
}

#right-bar {
    position: absolute;
    width: 350px;
    background: #333;
    border-left: 1px solid rgba(0,0,0,0.5);
    height: 100%;
    top: 50px;
    right: 0px;
    box-shadow: 2px 0 3px 0 rgba(0,0,0,0.2);
    z-index: 29;
    -webkit-transition: left .5s ease-in-out,background .4s ease-in-out;
    transition: left .5s ease-in-out,background .4s ease-in-out;
}

#right-bar .header {
    color: white;
    padding: 10px;
    font-size: 24px;
    line-height: 24px;
    font-weight: 100;
    border-bottom: 1px solid rgba(0,0,0,0.5);
}

#right-bar .item {
    border-bottom: 1px solid rgba(0,0,0,0.5);
    color: white;
    padding: 10px;
}

#right-bar .item .item-title {
    font-weight: 100;
    font-size: 18px;
    line-height: 24px;
    font-style: italic;
}

.right-bar-link,
.right-bar-link:hover {
    color: #bdc3c7;
    text-decoration: none;
    font-size: 11px;
}

#article-slug-check,
#article-slug-container,
#article-author-container,
#article-author-other,
#article-author-other-name,
#article-author-other-cancel,
#article-category-container,
#article-series-container {
    display: none;
}

#status {
    position: relative;
    bottom: 0px;
    padding: 10px;
    background-color: #ecf0f1;
}

#status .top {
    color: black;
    margin-bottom: 3px;
    font-size: 24px;
    line-height: 24px;
    font-weight: 100;
}

#schedule {
    position: relative;
    bottom: 0px;
    padding: 10px;
    background-color: #bdc3c7;
}

#schedule .top {
    color: black;
    margin-bottom: 3px;
    font-size: 24px;
    line-height: 24px;
    font-weight: 100;
}

#actions {
    position: relative;
    bottom: 0px;
    padding: 10px;
    background-color: #7f8c8d;
}

/* FOOTER */

footer {
    position: fixed;
    background: #bdc3c7;
    height: 40px;
    bottom: 0px;
    left: 0px;
    width: 100%;
    font-size: 21px;
    color: white;
    -webkit-font-smoothing: antialiased;
    padding-left: 10px;
    z-index: 30;
}

footer .links {
    float: right;
    color: black;
    font-size: 16px;
    font-weight: 100;
    font-style: italic;
    padding: 10px 25px 0px 0px;
}

footer .links a,
footer .links a:hover {
    color: black;
    font-size: 16px;
    font-weight: 100;
}